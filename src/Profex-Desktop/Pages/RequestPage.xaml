<Page x:Class="Profex_Desktop.Pages.RequestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Profex_Desktop.Pages"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      
      mc:Ignorable="d" 
      Height="auto" 
      Width="auto"
      
      Background="Transparent"
      Loaded="Page_Loaded"
      
      Title="RequestPage">

    <!--<Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Page.Resources>-->
    <Grid>
        <Grid>
            <ScrollViewer Visibility="Visible">
                <WrapPanel x:Name="wrpAdvertising" HorizontalAlignment="Center" Orientation="Horizontal"  Background="Transparent"/>
            </ScrollViewer>
        </Grid>
        <fa:ImageAwesome
                x:Name="loader"
                Icon="Spinner"
                Visibility="Visible"
                Spin="True"
                Foreground="{DynamicResource Loaders}"
                Margin="0 0 0 0"
                Height="100"
                />
    </Grid>
</Page>
