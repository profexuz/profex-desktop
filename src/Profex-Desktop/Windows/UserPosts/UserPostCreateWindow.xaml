                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" x:Name="lblPostTitle" Style="{DynamicResource lblPostTitle}"/>
                        <Label Grid.Column="1" x:Name="lblPostTitleAnswer" Style="{DynamicResource lblPostTitleAnswer}"/>
                    </Grid>
                    <Grid>
