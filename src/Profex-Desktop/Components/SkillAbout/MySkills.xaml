<UserControl x:Class="Profex_Desktop.Components.SkillAbout.MySkills"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Profex_Desktop.Components.SkillAbout"
             mc:Ignorable="d" 
             Height="auto" Width="600"
             Margin="5"
             >
    <Border CornerRadius="10" 
    Background="Blue">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="NameOfSkill" Grid.Column="0"
                   Content="Skill info"
                   FontSize="18" Margin="5 0 0 0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   FontFamily="{DynamicResource FontFamilyNormal}"
                   
                   FontWeight="SemiBold"/>
            <Button Grid.Column="1" Background="White"
                    Cursor="Hand"
                    Tag="{DynamicResource Delete}"
                    Style="{DynamicResource MySkillButton}"
                    Click="SkillChopish"
                    />
        </Grid>
    </Border>
</UserControl>
