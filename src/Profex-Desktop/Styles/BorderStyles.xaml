<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ProfexInfoBorder" TargetType="{x:Type Border}">
        <Setter Property="CornerRadius" Value="30"/>
        <Setter Property="Background" Value="{DynamicResource profexINFObackgr}"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="7"/>
    </Style>

    <Style x:Key="brLine" TargetType="{x:Type Border}">
        <Setter Property="Height" Value="2"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Background" Value="{DynamicResource brLineColor}"/>
        <Setter Property="Opacity" Value="0.3"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
    </Style>
    
    
    
    
</ResourceDictionary>