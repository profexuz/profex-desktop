<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <RootNamespace>Profex_Desktop</RootNamespace>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="AdminWindow\**" />
    <EmbeddedResource Remove="AdminWindow\**" />
    <None Remove="AdminWindow\**" />
    <Page Remove="AdminWindow\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Assets\Images\ProfexLogoDark.png" />
    <None Remove="Assets\Images\ProfexLogoLight.png" />
    <None Remove="Assets\Profile images\default image.jpg" />
    <None Remove="Assets\Profile images\default imageLight.jpg" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\Images\ProfexLogoDark.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\Images\ProfexLogoLight.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\Profile images\default image.jpg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\Profile images\default imageLight.jpg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

</Project>
